{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "./start.sh",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "SQLX_OFFLINE": "true",
    "STATIC_DIR": "/app/static"
  },
  "services": [
    {
      "name": "web",
      "healthcheck": {
        "path": "/api/health",
        "interval": "10s",
        "timeout": "5s",
        "retries": 3
      },
      "port": 3000
    }
  ]
} 